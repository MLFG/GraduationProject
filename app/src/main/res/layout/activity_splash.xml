<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7fcf6">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_splash_be"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_splash_logo"
        android:layout_below="@+id/iv_splash_logo"
        android:text="毕"
        android:textSize="50sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_splash_she"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_splash_logo"
        android:layout_below="@+id/iv_splash_logo"
        android:text="设"
        android:textSize="50sp"
        android:visibility="invisible" />
</RelativeLayout>
